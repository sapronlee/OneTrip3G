<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="keywords" content="onetrip,壹旅游" />
    <meta name="description" content="onetrip壹旅游3G网站后台管理程序" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/screen.css")" rel="stylesheet" type="text/css" media="screen, projection" />
    <!--[if lt IE 8]>
    <link rel="stylesheet" href="@Url.Content("~/Content/ie.css")" type="text/css" media="screen, projection" />
    <![endif]-->
    <link href="@Url.Content("~/Content/Admin/base.css")" rel="stylesheet" type="text/css" />

    @RenderSection("Sytles", false)
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/base.js")" type="text/javascript"></script>
    @RenderSection("Scripts", false)
</head>

<body>
    <header>
        <div class="menu-wrapper">
            @RenderPage("~/Areas/Admin/Views/Shared/_Menu.cshtml")
        </div>
        <div class="setting-wrapper">
            <ul class="clearfix">
                <li><a href="#" class="setting" title="设置">设置</a></li>
                <li><a href="#" class="logout" title="注销">注销</a></li>
            </ul>
        </div>
    </header>
    <div id="@(IsSectionDefined("sidebar") ? "wrapper" : "wrapper-full")" class="clearfix">
        @if (IsSectionDefined("sidebar"))
        {
            <div id="sidebar">@RenderSection("sidebar")</div>
        }
        <div id="main">
			<div id="toolbar" class="toolbar clearfix">
				<div class="toolbar-left">
					<span class="sitemap">站点导航：</span>
					<a href="@Url.Action("Index", "Home")" title="OneTrip 3G">OneTrip 3G</a>
					@if (IsSectionDefined("sitemap"))
                    {
                        <span class="line">➔</span>
                        @RenderSection("sitemap")
                    }
				</div>
				<div class="toolbar-right">
					@RenderSection("toolbar", false)
				</div>
			</div>
			<div class="main-container">
				@if (!string.IsNullOrEmpty(ViewBag.Notice))
                {
                    <div class="messages-notice">@ViewBag.Notice</div>
                }
                @if (!string.IsNullOrEmpty(ViewBag.Alert))
                {
					<div class="messages-alert">@ViewBag.Alert</div>
                }
				@RenderBody()
			</div>
		</div>
    </div>
    <footer></footer>
</body>
</html>
