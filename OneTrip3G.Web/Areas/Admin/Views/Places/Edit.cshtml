@model OneTrip3G.Models.EditPlace
@{
    ViewBag.Title = "修改";
}
@section sitemap {
    <a href="@Url.Action("Index")" title="景点">景点</a> <span class="line">➔</span> <span
        class="current_action">修改</span>
}
@section sidebar {
    @RenderPage("~/Areas/Admin/Views/Places/_Sidebar.cshtml")
}
@using (Html.BeginForm("Edit", "Places", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container form-body">
        <h3>基本信息</h3>
        <div class="editor-label">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Name, new { @class = "w-600" })
            @Html.HintFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(m => m.Body)
            @Html.HintFor(m => m.Body)
            @Html.ValidationMessageFor(m => m.Body)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.UrlKey)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(m => m.UrlKey)
            <span id="showUrl" class="info">@Url.RouteUrl("ShowPlace", new { urlKey = Model.UrlKey}, "http")</span>
        </div>
        <h3>上传信息</h3>
        <div class="editor-label">
            @Html.LabelFor(m => m.VideoFile)
        </div>
        <div class="editor-field">
            @Html.FileUploadFor(m => m.VideoFile, null)
            @Html.HintFor(m => m.VideoFile)
            @Html.ValidationMessageFor(m => m.VideoFile)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.MapFile)
        </div>
        <div class="editor-field">
            @Html.FileUploadFor(m => m.MapFile, null)
            @Html.HintFor(m => m.MapFile)
            @Html.ValidationMessageFor(m => m.MapFile)
        </div>
        <h3>操作</h3>
        <div class="buttons wrap">
            <input class="button btn-control" name="commit" type="submit" value="保存" />
            <a href="@Url.Action("Index")" class="canel btn-control">取消</a>
        </div>
    </div>
    
}
